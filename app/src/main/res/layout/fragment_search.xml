<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchFragment">
    <TextView
            android:id="@+id/text_search"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:text="@string/title_search"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            android:textStyle="bold"/>
    <EditText
            android:id="@+id/search_field"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/prompt_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_search" android:layout_marginTop="32dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    <GridView
            android:id="@+id/project_view"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:numColumns="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/search_field"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="70dp"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>