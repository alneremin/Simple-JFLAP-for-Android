<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.aboutme.AboutmeFragment">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="150dp"
            android:src="@drawable/infinity"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_centerInParent="true"
            android:layout_width="150dp"/>
    <TextView
            android:text="Lusha Yal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name_view"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="36sp" android:fontFamily="@font/comfortaa"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginTop="24dp"/>
    <Button
            android:text="krasnoyarsk, Russia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_address"
            android:layout_marginEnd="24dp"
            android:background="@null"
            style="@null"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/name_view" android:fontFamily="@font/roboto_black"
            android:typeface="normal" android:textSize="14sp" android:textAllCaps="true"/>
    <Button
            android:id="@+id/btn_sync_with_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/btn_sync_with_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_register_background"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_address"/>

    <Button
            android:text="@string/btn_log_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn_register"
            android:background="@drawable/btn_login_background"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sync_with_google"/>
</androidx.constraintlayout.widget.ConstraintLayout>